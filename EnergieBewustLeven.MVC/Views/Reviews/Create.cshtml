@model EnergieBewustLeven.API.Models.DTO.AddReviewRequestDTO

@{
    ViewData["Title"] = "Create";
}

@{
    SelectListItem viewbag = ViewBag.SelectedAppliance;
}

<h1>Maak een nieuwe review aan:</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplianceId" class="control-label">Selecteer uw apparaat:</label>
                <select asp-for="ApplianceId" asp-items="@(new SelectList(ViewBag.ApplianceIdList, "Value", "Text"))" class="form-control">
                    <option value="@viewbag.Value">@viewbag.Text</option>
                </select>
                <span asp-validation-for="ApplianceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewText" class="control-label">Schrijf hier uw review:</label>
                <input asp-for="ReviewText" class="form-control" />
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewScore" class="control-label">Typ hier uw score: (1-10)</label>
                <input asp-for="ReviewScore" class="form-control" />
                <span asp-validation-for="ReviewScore" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

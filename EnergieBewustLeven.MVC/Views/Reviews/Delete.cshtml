@model EnergieBewustLeven.API.Models.DTO.ReviewDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Review Id:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Apparaat Id")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplianceId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Inhoud van review:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Score gegeven aan het apparaat:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewScore)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="AdminIndex">Terug naar de lijst</a>
    </form>
</div>
@model EnergieBewustLeven.MVC.Models.ApplianceDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ApplianceDTO</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplianceName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplianceName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplianceBrand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplianceBrand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Gemeten vebruik:")
        </dt>
        @foreach (var item in Model.Measurements)
        {
            <div>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Verbruik)
                </dd>
            </div>
        }
        <dt class="col-sm-2">
            @Html.DisplayName("User Reviews:")
        </dt>
        @foreach (var item in Model.Reviews)
        {
            <div>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ReviewScore)
                </dd>
            </div>
        }
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="" asp-route-id="@Model?.ApplianceId">Meting toevoegen</a> |
    <a class="btn btn-primary" asp-action="Index">Terug naar apparaten</a>
</div>
